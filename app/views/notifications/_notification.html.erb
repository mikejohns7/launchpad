<div class="toast" data-autohide="true" data-delay="10000" id="<%= notification_id %>" style="position: absolute; top: 0; right: 0;">
  <div class="toast-header">
    <strong class="mr-auto">Project Name</strong>
    <small class="text-muted">7:07 PM</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <strong>@homer: </strong><%= content %>
  </div>
</div>
